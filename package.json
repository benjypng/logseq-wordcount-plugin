{
  "name": "logseq-wordcount-plugin",
  "author": "benjypng",
  "description": "Simple word and character counter that calculates the number of words across all nested blocks!",
  "license": "MIT",
  "logseq": {
    "id": "logseq-wordcount-plugin",
    "title": "logseq-wordcount-plugin",
    "icon": "./icon.png",
    "main": "dist/index.html"
  },
  "scripts": {
    "dev": "npx vite",
    "build": "npx eslint . --fix && npx tsc && npx vite build",
    "preview": "npx vite preview",
    "build:css": "npx tailwindcss -i ./src/tailwind.css -o ./src/output.css",
    "prepare": "husky"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/github",
        {
          "assets": [
            "logseq-wordcount-plugin.zip"
          ]
        }
      ]
    ]
  },
  "dependencies": {
    "@logseq/libs": "^0.2.8",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "rxjs": "^7.8.2",
    "words-count": "^2.0.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/eslint": "^9.6.1",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.0",
    "vite": "^7.2.4",
    "vite-plugin-logseq": "^1.1.2",
    "vite-tsconfig-paths": "^5.1.4"
  }
}
